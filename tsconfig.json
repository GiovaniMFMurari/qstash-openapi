{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",
  "compilerOptions": {
    "lib": ["es2023", "dom", "dom.iterable"],
    "module": "commonjs",
    "target": "es2022",
    "composite": false,
    "incremental": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true
  },
  "include": ["lib/**/*"]
}
